<isset name="yuansferCheckoutHelper" value="${require('*/cartridge/scripts/yuansfer/helpers/checkoutHelper')}" scope="page" />

<isscript>
    var assets = require('*/cartridge/scripts/assets.js');
    assets.addJs('/js/qrcode.js');
</isscript>

<isset name="yuansferWeChatQRCodeURL" value="${yuansferCheckoutHelper.getWeChatQRCodeURL(pdict.order.orderNumber)}" scope="page" />

<div id="wechat-qrcode-wrapper">

	<h1>${Resource.msg('wechatpay.completeyourorder', 'yuansfer', null)}</h1>

	<p>${Resource.msg('wechatpay.scanqrcode', 'yuansfer', null)} ${pdict.order.totals.grandTotal}</p>
	
	<div id="qrcode"></div>
	
	<p>${Resource.msg('wechatpay.qrcodealternative', 'yuansfer', null)}:</p>
	<a href="${yuansferWeChatQRCodeURL}" target="_blank">${yuansferWeChatQRCodeURL}</a>

</div>

<script type="text/javascript">

	var ready = (callback) => {
	  if (document.readyState != "loading") callback();
	  else document.addEventListener("DOMContentLoaded", callback);
	}
	
	ready(() => { 
	  new QRCode(document.getElementById("qrcode"), "${yuansferWeChatQRCodeURL}");
	});

</script>